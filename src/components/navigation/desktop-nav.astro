---
import NavigationLinks from './navigation-links.astro';
import SidebarCVButton from './sidebar-cv-button.astro';
import Avatar from './avatar.astro';
import { Image } from 'astro:assets';
import Header from '../../assets/header.jpg';
import { me } from '../../core/constants';
---

<div
    class="z-50 hidden bg-white dark:bg-neutral-900 lg:flex md:w-72 md:flex-col md:fixed md:inset-y-0"
    @click="open = !open"
>
    <Image
        src={Header}
        loading={'lazy'}
        alt={`${me.firstName} ${me.lastName} - Banner`}
        class="w-full h-24 object-cover"
    />
    <div
        class="flex flex-col flex-1 relative min-h-0 border-r border-neutral-200 bg-white dark:bg-neutral-900 dark:border-neutral-700"
    >
        <div class="flex flex-col flex-1 pt-4 pb-4 overflow-y-auto scrollbar-hide">
            <div class="flex items-center flex-shrink-0 pl-8 text-black">
                <Avatar />
            </div>
            <nav class="flex-1 mt-6"><NavigationLinks /></nav>
        </div>

        <div class="flex flex-shrink-0 py-4 px-6 border-t border-neutral-200 dark:border-neutral-700 items-center">
            <SidebarCVButton />
        </div>
    </div>
</div>
