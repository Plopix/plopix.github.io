---
import { Image } from "astro:assets";
import type { Talk } from "../../contracts/talk";

const { title, description, date, images, slides, video } = Astro.props as Talk;

const link = video || slides;
---

<div class="group">
  <div class="flex items-center gap-x-4">
    <a href={link} title={title} target="_blank">
      <Image
        src={images[0]}
        alt={title}
        loading={"lazy"}
        class="w-24 rounded-xl dark:border dark:border-neutral-700"
      />
    </a>
    <div class="text-sm leading-6">
      <p
        class="font-semibold text-black dark:text-white group-hover:text-blue-400 duration-200 line-clamp-1"
      >
        <a href={link} title={title} target="_blank">{title}</a>
      </p>
      <p class="text-neutral-500 text-sm dark:text-neutral-400">
        {date}
      </p>
    </div>
  </div>
  <p
    class="text-neutral-500 mt-4 dark:text-neutral-400 line-clamp-3 text-justify"
  >
    {description}
  </p>
</div>
