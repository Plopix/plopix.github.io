---
import BaseLayout from '../../layouts/base-layout.astro';
import { socials } from '../../core/constants';
import { Image } from 'astro:assets';
---

<BaseLayout
    title="Socials"
    description="Connect with on various platforms. Follow me for insights on technology, open-source projects, and industry trends. Let's collaborate and innovate together! Find me on X, GitHub, LinkedIn, and more."
>
    <section>
        <div class="std-page-container">
            <h1 class="text-2xl font-medium text-balance tracking-tight text-neutral-900 dark:text-white sm:text-4xl">
                Connect with me
            </h1>
            <p class="mt-4 std-description">
                Follow my latest updates whether it's
                <strong>tech insights, open-source projects, industry thoughts, or gaming adventures</strong>. You can
                find me on these platforms. Let's connect, explore, and build something awesome together!
            </p>
            <div class="mt-12 lg:mt-24 divide-y">
                {
                    socials.map((social) => (
                        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 items-start py-12  border-t dark:border-neutral-700">
                            <p class="text-lg font-semibold leading-6 std-paragraph">{social.title}</p>

                            <ul role="list" class="grid md:grid-cols-2 gap-12 dark:border-neutral-700   lg:col-span-2">
                                {social.items.map((item) => (
                                    <li class="flow-root">
                                        <a href={item.url} title={item.name}>
                                            <div class=" flex items-center gap-x-4">
                                                <Image
                                                    src={item.logo}
                                                    alt={item.name}
                                                    loading="eager"
                                                    class="size-10 rounded"
                                                />
                                                <div class="text-sm leading-6">
                                                    <p class="font-semibold text-black dark:text-white hover:text-main-500">
                                                        {item.name}
                                                    </p>
                                                    <p class="text-neutral-500 text-sm dark:text-neutral-400">
                                                        {item.username}
                                                    </p>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>
</BaseLayout>
