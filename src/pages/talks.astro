---
import { me } from "../core/constants";
import BaseLayout from "../layouts/base-layout.astro";
import { talks, upcomingTalks } from "../core/talks";
import Talk from "../components/blog/talk.astro";
import Push from "../components/push.astro";
import ContactMe from "../components/contact-me.astro";
---

<BaseLayout
  title="Tech talks & Livestreams on development & architecture"
  description=`Explore ${me.firstName} ${me.lastName}'s  talks and livestreams, covering software development, system architecture, performance optimization, and open-source projects. Watch past sessions and stay updated on upcoming events.`
>
  <section>
    <div class="std-page-container">
      <h1
        class="text-2xl font-medium text-balance tracking-tight text-neutral-900 dark:text-white sm:text-4xl"
      >
        Sharing knowledge & insights
      </h1>
      <p class="mt-4 std-description">
        I enjoy <strong>sharing my knowledge, experiences, and insights</strong>
        through <strong>talks, conference sessions, and livestreams</strong>.
        Whether it's about <strong
          >software architecture, performance optimization, open-source
          development, or best practices</strong
        >, these sessions reflect my passion for <strong
          >teaching, learning, and engaging with the tech community</strong
        >. Here, you'll find a collection of my <strong
          >past and upcoming talks, livestreams, and recorded sessions</strong
        >, covering <strong
          >deep technical discussions, live coding, and industry trends</strong
        >.
      </p>

      {
        upcomingTalks.length === 0 && (
          <div class="mt-8 mb-8">
            <Push>
              <div class="flex flex-col items-center justify-center">
                <p class="mt-4 std-description">
                  I don't have any upcoming talks at the moment, but I'm always
                  open to new opportunities! If you'd like me to speak at your
                  event, conference, or meetup, feel free to reach out. Let's
                  make it happen!
                </p>
                <ContactMe />
              </div>
            </Push>
          </div>
        )
      }

      {
        upcomingTalks.length > 0 && (
          <div class="mt-8 mb-8">
            <h2 class="text-lg font-semibold leading-6 std-paragraph">
              Upcoming talks & livestreams
            </h2>
            <ul
              role="list"
              class="grid md:grid-cols-2 mt-12 gap-12 gap-y-24 mb-8"
            >
              {upcomingTalks.map((talk) => (
                <li class="flow-root">
                  <Talk {...talk} />
                </li>
              ))}
            </ul>

            <Push>
              <div class="flex flex-col items-center justify-center">
                <p class="mt-4 std-description">
                  I'm always open to more opportunities! If you're looking for a
                  speaker for your event, conference, or meetup, feel free to
                  reach out. Let's make it happen!
                </p>
                <ContactMe />
              </div>
            </Push>
          </div>
        )
      }

      <div class="mt-8 border-t dark:border-neutral-700 pt-12">
        <h2
          class="text-lg font-semibold leading-6 text-neutral-900
          dark:text-white group-hover:text-main-400"
        >
          Past talks & livestreams
        </h2>
        <ul role="list" class="grid md:grid-cols-2 mt-12 gap-12 gap-y-24">
          {
            talks.map((talk) => (
              <li class="flow-root">
                <Talk {...talk} />
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>
